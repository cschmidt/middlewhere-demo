<?xml version="1.0" encoding="UTF-8" ?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/j2ee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
                         http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd"
  version="2.1">
  <enterprise-beans>
    <entity>
      <ejb-name>InventoryItem</ejb-name>
      <local-home>middlewhere.ejb2server.InventoryItemHome</local-home>
      <local>middlewhere.ejb2server.InventoryItemLocal</local>
      <ejb-class>middlewhere.ejb2server.InventoryItemEJB</ejb-class>
      <persistence-type>Container</persistence-type>
      <prim-key-class>java.lang.String</prim-key-class>
      <reentrant>false</reentrant>
      <abstract-schema-name>InventoryItem</abstract-schema-name>
      <cmp-field>
        <field-name>itemNumber</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>description</field-name>
      </cmp-field>
      <cmp-field>
        <field-name>quantityOnOrder</field-name>
      </cmp-field>
      <primkey-field>itemNumber</primkey-field>
      <security-identity>
        <use-caller-identity />
      </security-identity>
    </entity>
    <session>
      <ejb-name>InventoryManager</ejb-name>
      <home>middlewhere.ejb2server.InventoryManagerHome</home>
      <remote>middlewhere.ejb2server.InventoryManagerRemote</remote>
      <ejb-class>middlewhere.ejb2server.InventoryManagerEJB</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <ejb-local-ref>
        <ejb-ref-name>ejb/InventoryItem</ejb-ref-name>
        <ejb-ref-type>Entity</ejb-ref-type>
        <local-home>middlewhere.ejb2server.InventoryItemHome</local-home>
        <local>middlewhere.ejb2server.InventoryItemLocal</local>
        <ejb-link>InventoryItem</ejb-link>
      </ejb-local-ref>
      <security-identity>
        <use-caller-identity />
      </security-identity>
    </session>
    <session>
      <ejb-name>DeadlockAverseInventoryManager</ejb-name>
      <home>middlewhere.ejb2server.InventoryManagerHome</home>
      <remote>middlewhere.ejb2server.InventoryManagerRemote</remote>
      <ejb-class>middlewhere.ejb2server.DeadlockAverseInventoryManagerEJB</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
      <ejb-local-ref>
        <ejb-ref-name>ejb/InventoryItem</ejb-ref-name>
        <ejb-ref-type>Entity</ejb-ref-type>
        <local-home>middlewhere.ejb2server.InventoryItemHome</local-home>
        <local>middlewhere.ejb2server.InventoryItemLocal</local>
        <ejb-link>InventoryItem</ejb-link>
      </ejb-local-ref>
      <security-identity>
        <use-caller-identity />
      </security-identity>
    </session>
    
  </enterprise-beans>
  <assembly-descriptor>
    <security-role>
      <role-name>everyone</role-name>
    </security-role>
    <method-permission>
      <role-name>everyone</role-name>
      <method>
        <ejb-name>InventoryItem</ejb-name>
        <method-name>*</method-name>
      </method>
    </method-permission>
    <container-transaction>
      <method>
        <ejb-name>InventoryItem</ejb-name>
        <method-name>*</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>
